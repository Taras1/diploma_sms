<div class="the_title_of_page">Вход на сайт</div>
<% if flash[:error] %>
	<div class="error"><%= flash[:error] %></div>
<% end %>
<div class="form_for">
	<%= form_for :session, :url => {:controller => :sessions, :action => :create} do |f| %>
		<%= f.label "E-mail" %><br />
		<%=f.text_field :email %><br /><br />
		<%= f.label "Пароль" %><br />
		<%=f.password_field :password %><br /><br />
		<br /><br />
		<%= f.submit "Войти"%>
	<% end %>
</div>
<p style="border: 1px solid pink;padding: 5px;width: 500px;margin: 0 auto 10px;font-size: 13px;">Для регистрации перейдите по <%= link_to "ссылке", new_user_path %></p>

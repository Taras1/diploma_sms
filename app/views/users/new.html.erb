<div class="the_title_of_page">Регистрация</div>
<div class="form_for">
	<%= form_for :user, :url => { :action => :create} do |f| %>
		<%= f.label "Имя" %><br />
		<%=f.text_field :name %>
		<% if @user.errors.any? %>
			<div class="form_errors"><%= @user.errors[:name][0] %></div>
			<% else %>
			<br /><br />
		<%end%>
		<%= f.label "E-mail" %><br />
		<%=f.text_field :email %>
		<% if @user.errors.any? %>
			<div class="form_errors"><%= @user.errors[:email][0] %></div>
			<% else%>
			<br /><br />
		<%end%>
		<%= f.label "Пароль" %><br />
		<%=f.password_field :password %>
		<% if @user.errors.any? %>
			<div class="form_errors"><%= @user.errors[:password][0]%></div>
			<% else %>
			<br /><br />
		<%end%>
		<%= f.label "Подтверждение пароля" %><br />
		<%=f.password_field :password_confirmation %>
		<br /><br /><br />
		<%= f.submit "Зарегистрироваться"%>
	<%end%>
</div>
<p style="border: 1px solid pink;padding: 5px;width: 500px;margin: 0 auto 10px;font-size: 13px">Если вы зарегистрированый пользователь, для входа перейдите по <%= link_to "ссылке", signin_path %></p>